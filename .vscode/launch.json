{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell: Launch Current Script",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${fileDirname}"
        },
        {
            "name": "PowerShell: Launch Example Script",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/example.ps1",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell: Launch Start Script",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Start.ps1",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell: Interactive Session",
            "type": "PowerShell",
            "request": "launch",
            "cwd": "${workspaceFolder}"
        }
    ]
}
